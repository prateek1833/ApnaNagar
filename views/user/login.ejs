<% layout('../layout/boilerplateLocation') -%>

    <div class="row mt-3">
        <div class="text-center">
            <img id="tripleTapHeading" src="https://res.cloudinary.com/dzrxswqur/image/upload/v1739196654/icon-512x512_iqnv9i.png"
                height="180px" style="border-radius: 50%; box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.3);">
        </div>
        <div class="col-12 col-md-6 offset-md-3 mt-4"> 
            <div class="tab-content mt-3" id="loginTabContent">
                <!-- Customer Login -->
                <div class="tab-pane fade show active" id="customer" role="tabpanel" aria-labelledby="customer-tab">
                    <form action="/login" method="POST" class="needs-validation" novalidate>
                        <div class="mb-3">
                          <label for="login-identifier" class="form-label">Username or Mobile</label>
                          <input type="text" name="identifier" id="login-identifier"
                            placeholder="Enter your username or mobile number"
                            class="form-control" required>
                        </div>
                        <div class="mb-3">
                          <label for="customer-password" class="form-label">Password</label>
                          <input type="password" name="password" id="customer-password"
                            placeholder="Enter your password" class="form-control" required>
                        </div>
                        <button class="btn light-btn w-100">Log In</button>
                      </form>
                      
                    <% if (error) { %>
                        <div class="text-center" style="color: red;">
                            <%= error %>
                        </div>
                        <% } %>
                            <div class="text-center">
                                <p class="mt-3">Don't have an account? <a href="/signup"><b>Sign Up</b></a></p>
                                <p><a class="mt-3" style="text-decoration: none;"><b>Forget Password</b></a></p>
                            </div>
                </div>               
            </div>
        </div>
    </div>



    <script>
        // Example custom JavaScript for validation or interaction, if needed
        document.addEventListener('DOMContentLoaded', function () {
            // Ensure proper tab switching behavior is maintained.
            const tabs = document.querySelectorAll('[data-bs-toggle="tab"]');
            tabs.forEach(tab => {
                tab.addEventListener('shown.bs.tab', (event) => {
                    // Perform actions on tab switch, if required.
                    console.log(`Switched to ${event.target.id}`);
                });
            });
        });
        let tapCount = 0;
        let timeout;

        document.getElementById("tripleTapHeading").addEventListener("click", function () {
            tapCount++;

            if (tapCount === 5) {
                window.location.href = "/employee/login"; // Replace with your desired URL
                tapCount = 0;
            }

            clearTimeout(timeout);
            timeout = setTimeout(() => {
                tapCount = 0;
            }, 500); // Reset tap count if more than 500ms passes between taps
        });

    </script>
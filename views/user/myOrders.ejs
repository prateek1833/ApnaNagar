<% layout('../layout/boilerplate') -%>

<% if (allOrder.length === 0) { %>
    <h2 style="opacity: 0.5;">You haven't made any orders yet.</h2>
<% } else { %>
    <% allOrder.forEach(order => { %>
        <% let user = order.author; %>
        <div class="accordion" id="orderAccordion">
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading<%= order._id %>">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapse<%= order._id %>" aria-expanded="false" aria-controls="collapse<%= order._id %>">
                        <div>
                            <!-- Order Details -->
                            <div> <%= order.status %></div>
                            <div style="font-size: 0.85rem; color: gray;">Created on: <%= new Date(order.createdAt).toLocaleString("en-IN") %></div>
                            
                            <!-- Order Items (small font) -->
                            <div style="font-size: 0.75rem; color: #6c757d;">
                                Items: 
                                <% order.items.forEach((orderItem, index) => { %>
                                    <%= orderItem.item.title %><%= index < order.items.length - 1 ? ', ' : '' %>
                                <% }); %>
                            </div>
                        </div>
                    </button>
                </h2>
                >
                <div id="collapse<%= order._id %>" class="accordion-collapse collapse" 
                    aria-labelledby="heading<%= order._id %>" data-bs-parent="#orderAccordion">
                    <div class="accordion-body">
                        <table class="table table-primary">
                            <thead class="thead-primary">
                                <tr>
                                    <th>Item</th>
                                    <th>Type</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Rate</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% let sum = 0; %>
                                <% let weight = 0; %>
                                <% order.items.forEach(orderItem => { %>
                                    <tr>
                                        <td><%= orderItem.item.title %></td>
                                        <td><%= orderItem.item.typ %></td>
                                        <td><%= orderItem.item.price.toLocaleString("en-IN") %> &#8377; / <%= orderItem.item.unit %></td>
                                        <td><%= orderItem.item.quantity.toLocaleString("en-IN") %> <%= orderItem.item.unit %></td>
                                        <td><%= (orderItem.item.quantity * orderItem.item.price).toLocaleString("en-IN") %> &#8377;</td>
                                    </tr>
                                    <% sum += orderItem.item.quantity * orderItem.item.price; %> 
                                    <% weight += parseInt(orderItem.item.quantity); %>
                                <% }); %>
                                <tr>
                                    <td><b>Delivery</b></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td><b><%= (user.distance * 2).toFixed(2).toLocaleString("en-IN") %> &#8377;</b></td>
                                </tr>
                                <tr>
                                    <td><b>Balance Due</b></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td><b><%= user.balance_due.toLocaleString("en-IN") %> &#8377;</b></td>
                                </tr>
                                <tr>
                                    <td><b>Total</b></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td>
                                        <p style="text-decoration: line-through;">
                                            ₹<%= (sum + user.balance_due + user.distance * 2).toFixed(2).toLocaleString("en-IN") %>
                                        </p>
                                        <b>₹<%= Math.floor(sum + user.balance_due + user.distance * 2).toFixed(2).toLocaleString("en-IN") %></b>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Progress Bar Section -->
                        <div class="progress" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                            <% let progress = 0; %>
                            <% if (order.status === "Order Processing") progress = 25; %>
                            <% if (order.status === "Shipped") progress = 50; %>
                            <% if (order.status === "Out for Delivery") progress = 75; %>
                            <% if (order.status === "Delivered") progress = 100; %>
                            <div class="progress-bar bg-info" style="width: <%= progress %>%"></div>
                        </div>

                        <!-- Order Progress Steps -->
                        <div class="order-progress">
                            <div class="step <%= order.status === 'Order Processing' || order.status === 'Shipped' || order.status === 'Out for Delivery' || order.status === 'Delivered' ? 'completed' : '' %>">Ordered</div>
                            <div class="step <%= order.status === 'Shipped' || order.status === 'Out for Delivery' || order.status === 'Delivered' ? 'completed' : '' %>">Shipped</div>
                            <div class="step <%= order.status === 'Out for Delivery' || order.status === 'Delivered' ? 'completed' : '' %>">Out for Delivery</div>
                            <div class="step <%= order.status === 'Delivered' ? 'completed' : '' %>">Delivered</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% }); %>
<% } %>

<!-- CSS for Progress Bar and Order Steps -->
<style>
    .progress {
        height: 10px;
        margin-bottom: 20px;
    }
    .order-progress {
        display: flex;
        justify-content: space-between;
        margin-top: 10px;
    }
    .step {
        width: 25%;
        text-align: center;
        position: relative;
    }
    .step:before {
        content: '';
        position: absolute;
        top: -20px;
        left: 50%;
        transform: translateX(-50%);
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background-color: #ddd;
    }
    .completed:before {
        background-color: #007bff;
    }
    .completed:after {
        content: '\2713';
        position: absolute;
        top: -25px;
        left: 50%;
        transform: translateX(-50%);
        font-size: 14px;
        color: white;
        background-color: #007bff;
        border-radius: 50%;
        width: 18px;
        height: 18px;
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>

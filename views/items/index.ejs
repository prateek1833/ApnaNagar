<% layout('../layout/boilerplate') -%>
    <div id="holidayapi" class="holiday-wish"></div>

    <style>
        .holiday-wish {
            color: white;
            background: linear-gradient(to right, #FF6F61, #6A0DAD);
            font-size: 18px;
            /* font-weight: bold; */
            font-weight: bolder;
            text-align: center;
            padding: 10px 0 10px 0;
            width: 100vw;
            margin: 0 -24px 0 -24px;
            font-family: 'Poppins', cursive;
            top: -12px;
            border-radius: 0 0 15px 15px;
            position: relative;
        }
    </style>


    <div id="filters" style="margin: 0 -24px 0 -24px;">
        <% const filters=[ { name: "Burger" , search: "burger" ,
            img: "https://res.cloudinary.com/dzrxswqur/image/upload/v1735018802/burger_ajrdgn.png" }, { name: "Pizza" ,
            search: "pizza" ,
            img: "https://res.cloudinary.com/dzrxswqur/image/upload/v1734205720/items/r05w4cm0rbupbqpxkabt.png" }, {
            name: "Momos" , search: "momos" ,
            img: "https://res.cloudinary.com/dzrxswqur/image/upload/v1735019920/momo_rtnbai.webp" }, {
            name: "Manchurian" , search: "manchurian" ,
            img: "https://res.cloudinary.com/dzrxswqur/image/upload/v1735020276/manchurian_v2tvak.png" }, {
            name: "Samosa" , search: "samosa" ,
            img: "https://res.cloudinary.com/dzrxswqur/image/upload/v1735021336/samosa_rs3hqu.png" }, { name: "Noodles"
            , search: "noodles" ,
            img: "https://res.cloudinary.com/dzrxswqur/image/upload/v1735231532/noodles_c0gfen.png" }, { name: "Bakery"
            , search: "Bakery" , img: "https://res.cloudinary.com/dzrxswqur/image/upload/v1735021888/cake_lmspb1.png" },
            { name: "Sweets" , search: "Sweets" ,
            img: "https://res.cloudinary.com/dzrxswqur/image/upload/v1735230854/laddu_liklwj.png" }, ]; %>

            <% filters.forEach(filter=> { %>
                <a class="filter nav-link " href="javascript:void(0)" data-search="<%= filter.search %>">
                    <div><img src="<%= filter.img %>" class="filter-image" alt="<%= filter.name %>"></div>
                    <p>
                        <%= filter.name %>
                    </p>
                </a>
                <% }) %>
    </div>

    <form class="d-flex justify-content-center" role="search" method="GET" action="/items/search" id="searchForm">
        <input class="form-control" name="keyword" type="search" placeholder="Tell us what you want" aria-label="Search"
            id="searchInput" style="display: none;">
        <button class="btn" type="submit"><i class="fa-solid fa-magnifying-glass" style="display: none;"></i></button>
    </form>

    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" data-bs-interval="2000"
        style="margin: 0 -20px 0 -20px;">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3"
                aria-label="Slide 4"></button>
        </div>
        <div class="carousel-inner" style="border-radius: 10px;">
            <div class="carousel-item active">
                <img class="d-block w-100" style="height: 120px; object-fit: cover;"
                    src="https://res.cloudinary.com/dzrxswqur/image/upload/v1738074214/Red_Simple_3D_Food_Delivery_ysovur.png"
                    alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" style="height: 120px; object-fit: cover;"
                    src="https://res.cloudinary.com/dzrxswqur/image/upload/v1738073971/Discount_50_zbu3wb.png"
                    alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" style="height: 120px; object-fit: cover;"
                    src="https://res.cloudinary.com/dzrxswqur/image/upload/v1738075309/PizzaDiscount_rtkicw.png"
                    alt="Third slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" style="height: 120px; object-fit: cover;"
                    src="https://res.cloudinary.com/dzrxswqur/image/upload/v1739345604/vegeterian_g0t8gb.png"
                    alt="Forth slide">
            </div>
        </div>
        <button class="carousel-control-prev no-spinner" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next no-spinner" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <hr>

    <% if(allRestaurant.length>0){ %>
        <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-2 row-cols-1 g-1 d-flex justify-content-between">
            <div class="d-flex flex-row">
                <p style=" margin: 0;padding: 0;color: grey;">Order from your favorite restaurants</p>
            </div>
            <% for (let restaurant of allRestaurant) { %>
                <div class="card border-0 shadow-lg rounded" style="width: 43vw; padding: 0;margin: 0;">
                    <a href="/restaurant/<%= restaurant._id %>/show" class="text-decoration-none text-dark">
                        <div class="position-relative">
                            <img src="<%= restaurant.image.url %>" class="card-img-top rounded-top"
                                alt="<%= restaurant.name %>" style="
                                            height: 75px; 
                                            object-fit: cover; 
                                            filter: <%= restaurant.isOpen ? 'none' : 'grayscale(100%)' %>;
                                        ">
                        </div>
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <p style="font-size: large;font-weight: bold;" class="card-title text-center">
                                <%= restaurant.username %>
                            </p>
                            <div class="">
                                <% if (restaurant.avgRating> 0) { %>
                                    <span class="badge bg-success "> <i class="fa-solid fa-star"></i>
                                        <%= restaurant.avgRating %>
                                    </span>
                                    <% } %>
                            </div>
                        </div>
                    </a>
                </div>
                <% } %>
        </div>
        <% } %>


            <hr>
            <% if (allItem.length===0) { %>
                <div style="text-align: center; padding: 20px;">
                    <p style="font-size: 18px; font-weight: 500; color: #444;">
                        Can't find what you're looking for? Don't worry!
                    </p>
                    <h3 style="opacity: 0.9; font-size: 20px; color: #6A0DAD; font-weight: 600;">
                        Let us know, and we'll add it for you.
                    </h3>
                    <a class="filter" href="/owner/addItem" aria-label="Add Item" style="
                            display: inline-flex;
                            align-items: center;
                            justify-content: center;
                            background-color: #6A0DAD;
                            color: white;
                            font-size: 16px;
                            font-weight: bold;
                            padding: 12px 20px;
                            border-radius: 25px;
                            text-decoration: none;
                            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
                            transition: all 0.3s ease;
                        ">
                        <i class="fa-solid fa-plus" style="margin-right: 8px;"></i>
                        Add Item
                    </a>
                </div>
                <% } else { %>
                    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 g-1">
                        <p style=" margin: 0;padding: 0;color: grey;">Order the items you are craving for!</p>
                        <% for (let item of allItem) { %>
                            <div class="card shadow-sm h-100" style="width: 22rem; border: none;">
                                <a href="/items/<%= item._id %>/show.ejs"
                                    class="item-link text-decoration-none text-dark">
                                    <img src="<%= item.image.url %>" class="card-img-top mb-1 rounded"
                                        alt="<%= item.title %>" style="
                                        height: 200px; 
                                        object-fit: cover; 
                                        filter: <%= item.isOpen ? 'none' : 'grayscale(100%)' %>;
                                        opacity: <%= item.isOpen ? '1' : '0.6' %>;
                                    ">
                                    <% if (!item.isOpen) { %>
                                        <i class="fa-solid fa-triangle-exclamation" style="color: red;"> Closed</i>
                                        <% } %>

                                            <div class="card-body">
                                                <p class="card-text p-0 m-0">
                                                    <b
                                                        class="card-text d-flex justify-content-between align-items-center">
                                                        <span style="font-size: 1.2rem;">
                                                            <%= item.title %>
                                                        </span>
                                                        <% if (item.avgRating !=0) { %>
                                                            <button type="button"
                                                                class="btn btn-success btn-sm d-flex align-items-center">
                                                                <%= item.avgRating %><i
                                                                        class="fa-solid fa-star ms-1"></i>
                                                            </button>
                                                            <% } %>
                                                    </b>
                                                    <span class="d-block p-0">
                                                        <p style="text-decoration: line-through; display: inline; margin: 0; color: #888; margin: 0;padding: 0;"
                                                            class="me-2 ">
                                                            &#8377;<%= Math.round(item.detail[0].price + (0.3 *
                                                                item.detail[0].price)).toLocaleString("en-IN") %>
                                                        </p>
                                                        <p
                                                            style="display: inline; margin: 0; font-size: 1.1rem; color: #d9534f; font-weight: bold;">
                                                            &#8377;<%= item.detail[0].price.toLocaleString("en-IN") %>/
                                                                <%= item.unit %>
                                                        </p>
                                                    </span>
                                                </p>
                                            </div>
                                </a>
                            </div>
                            <% } %>
                    </div>
                    <% } %>


                        <script>
                            // Attach click event listener to filter elements
                            document.querySelectorAll('.filter').forEach(element => {
                                element.addEventListener('click', () => {
                                    const keyword = element.getAttribute('data-search');
                                    const searchInput = document.querySelector('#searchInput');
                                    const searchForm = document.querySelector('#searchForm');

                                    if (searchInput && searchForm) {
                                        searchInput.value = keyword;
                                        searchForm.submit();
                                    } else {
                                        console.error('Search input or form not found.');
                                    }
                                });
                            });
                            const apiKeys = [
                                "IWwlA4RiVGiAehfVj5G9Zmd8C1PvVg8a",
                                "j3ifcrkw9ApVrylMbd9gQ8DsnZZtR8aZ",
                                "s963L4PdHmfi5rFf3IjSDv78QWoCRSzS",
                                "xoSRFxd4fKGZKOpTnaiVqxdKkzvufay8",
                                "0SH7c1V3IFq8m0LHs14iJRCN3ztNJ3wA"
                            ]; // Replace with actual API keys

                            const country = "IN";
                            const today = new Date();
                            const year = today.getFullYear();
                            const month = today.getMonth() + 1;
                            const day = today.getDate();
                            const urlBase = `https://calendarific.com/api/v2/holidays?country=${country}&year=${year}&month=${month}&day=${day}`;

                            // Retrieve API usage data
                            let apiUsage = JSON.parse(localStorage.getItem("apiUsage")) || { 0: 0, 1: 0, 2: 0, 3: 0, 4: 0 };
                            let lastMonth = localStorage.getItem("lastMonth");
                            // Reset API usage at the start of a new month
                            if (lastMonth !== month.toString()) {
                                apiUsage = { 0: 0, 1: 0, 2: 0, 3: 0, 4: 0 };
                                localStorage.setItem("lastMonth", month.toString());
                            }

                            // Determine API key index based on the day
                            const apiIndex = Math.floor((day - 1) / 6);  // Divides days into groups of 6

                            async function fetchHoliday() {
                                if (apiIndex >= apiKeys.length) {
                                    console.log("Invalid API index.");
                                    return;
                                }

                                const url = `${urlBase}&api_key=${apiKeys[apiIndex]}`;

                                const storedData = localStorage.getItem("holidayData");
                                const storedDate = localStorage.getItem("holidayDate");

                                if (storedData && storedDate === `${year}-${month}-${day}`) {
                                    displayHoliday(JSON.parse(storedData));
                                    return;
                                }

                                try {
                                    const response = await fetch(url);
                                    const data = await response.json();
                                    console.log("url", url);
                                    if (data.response && data.response.holidays && data.response.holidays.length > 0) {
                                        localStorage.setItem("holidayData", JSON.stringify(data.response.holidays[0]));
                                        localStorage.setItem("holidayDate", `${year}-${month}-${day}`);
                                        console.log("hi", data.response);
                                        // Increment API usage counter
                                        apiUsage[apiIndex]++;
                                        localStorage.setItem("apiUsage", JSON.stringify(apiUsage));

                                        displayHoliday(data.response.holidays[0]);
                                    }
                                } catch (error) {
                                    console.log("Error fetching holiday data:", error);
                                    if (error.response) {
                                        console.log("Response error:", error.response);
                                    } else if (error.request) {
                                        console.log("Request error:", error.request);
                                    } else {
                                        console.log("Error message:", error.message);
                                    }
                                }

                            }

                            function displayHoliday(holiday) {
                                document.getElementById("holidayapi").innerHTML = `
                                    <h5 class="mt-2">🎉 It is ${holiday.name}!</h5>
                                    <p style="margin:0;">Celebrate and party with your loved ones</p>`;
                            }

                            fetchHoliday();


                        </script>

                        <style>
                            .filter-image {
                                height: 3rem;
                                object-fit: cover;
                            }

                            .card-img {
                                height: 20rem;
                                object-fit: cover;
                            }
                        </style>
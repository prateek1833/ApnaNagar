<% layout("../layout/boilerplate") -%>

<div class="container">
    <h1 class="text-center">Admin Statistics</h1>

    <!-- Overview -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Total Earnings (Previous Month)</div>
                <div class="card-body">
                    <h5 class="card-title">₹<%= totalEarnings %></h5>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card text-white bg-info mb-3">
                <div class="card-header">Total Orders</div>
                <div class="card-body">
                    <h5 class="card-title"><%= totalOrders %></h5>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Selling Items -->
    <div class="mt-5">
        <h3>Top Selling Items</h3>
        <ul class="list-group">
            <% topSellingItems.forEach(item => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= item.name %>
                    <span class="badge bg-primary rounded-pill"><%= item.quantitySold %> sold</span>
                </li>
            <% }); %>
        </ul>
    </div>

    <!-- Top Customers -->
    <div class="mt-5">
        <h3>Top Customers</h3>
        <ul class="list-group">
            <% topCustomers.forEach(customer => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= customer.name %>
                    <span class="badge bg-secondary rounded-pill">₹<%= customer.totalSpent %> spent, <%= customer.totalItems %> items</span>
                </li>
            <% }); %>
        </ul>
    </div>

    <!-- Restaurant-wise Item Sales Graph -->
    <div class="mt-5">
        <h3>Restaurant-wise Sales</h3>
        <canvas id="restaurantSalesChart"></canvas>
    </div>
</div>

<!-- Chart.js for Restaurant Sales Graph -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const restaurantSales = <%- JSON.stringify(restaurantSales) %>;

    const restaurantLabels = Object.keys(restaurantSales);
    const totalItemsSold = restaurantLabels.map(name => restaurantSales[name].totalItemsSold);
    const totalRevenue = restaurantLabels.map(name => restaurantSales[name].totalRevenue);

    const ctx = document.getElementById('restaurantSalesChart').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: restaurantLabels, // Display restaurant names
            datasets: [
                {
                    label: 'Total Items Sold',
                    data: totalItemsSold,
                    backgroundColor: 'rgba(54, 162, 235, 0.7)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                },
                {
                    label: 'Total Revenue (₹)',
                    data: totalRevenue,
                    backgroundColor: 'rgba(255, 99, 132, 0.7)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1
                }
            ]
        },
        options: {
            responsive: true,
            scales: {
                x: {
                    ticks: { autoSkip: false, maxRotation: 30, minRotation: 30 } // Adjust for long names
                },
                y: { beginAtZero: true }
            }
        }
    });
</script>
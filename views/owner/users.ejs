<% layout('../layout/boilerplate') -%>

<table class="table table-primary" style="max-width: fit-content;">
    <thead class="thead-primary">
        <tr>
            <th>Name</th>
            <th>Mo. No.</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% if (allUser && allUser.length > 0) { %>
            <% for(let user of allUser){ %>
                <tr>
                    <td>
                        <%= user.username %>
                    </td> 
                    <td>
                        <%= user.mobile %>
                    </td>
                    <td>
                        <form method="GET"action="/<%=user._id%>/statistics">
                            <button class="btn btn-dark"><i class="fa-solid fa-chart-line"></i></button>
                        </form>
                    </td>
                </tr>
            <% } %>
        <% } else { %>
            <tr>
                <td colspan="4">No Customer in the List</td>
            </tr>
        <% } %>
    </tbody>
</table>

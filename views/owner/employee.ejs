<% layout('../layout/boilerplate') -%>

<h1>Delivery Boys</h1>
<div class="">
    <% Employees.forEach(employee => { %>
        <div class="card text-align">
            <h2><%= employee.username %></h2>
            <img src="<%= employee.image?.url %>" alt="Profile Image" style="width: 150px; height: 150px; object-fit: cover; border-radius: 10px;">
            
            <p><strong>Mobile:</strong> <%= employee.mobile %></p>
            <p><strong>Area:</strong> <%= employee.area %></p>
            <p><strong>District:</strong> <%= employee.district %></p>
            <p><strong>State:</strong> <%= employee.state %></p>
            <p><strong>Pincode:</strong> <%= employee.pincode %></p>

            <p><strong>Status:</strong> 
                <span class="status <%= employee.status === 'Active' ? 'active' : 'inactive' %>">
                    <%= employee.status %>
                </span>
            </p>

            <p><strong>Availability:</strong> <%= employee.isAvailable ? 'Available' : 'Not Available' %></p>

            <p><strong>Total Deliveries:</strong> <%= employee.total_deliveries %></p>

            <p><strong>Average Rating:</strong> 
                <span class="rating">⭐ <%= employee.avgRating || 'N/A' %>/5</span>
            </p>

            <p><strong>Total Earnings:</strong> ₹<%= employee.total_earnings %></p>

            <p><strong>Balance Due:</strong> ₹<%= employee.balance_due %></p>

            
            <p><strong>Completed Orders:</strong> <%= employee.completed_orders.length %></p>
            
            <p><strong>Active_Order:</strong> <%= employee.active_order ? employee.active_order.toString() : 'None' %></p>
            
            <p><strong>Account Created At:</strong> <%= new Date(employee.created_at).toLocaleString() %></p>

            <p><strong>Aadhar Card Number</strong> <%= employee.aadhar %></p>
        </div>
    <% }); %>
</div>

<style>

/* Page Title */
h1 {
    text-align: center;
    font-size: 2rem;
    color: #222;
    margin-bottom: 20px;
}

/* Card Styling */
.card {
    background: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    width: 300px;
    transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    border-left: 5px solid #007bff;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
}

/* Card Content */
.card h2 {
    margin: 0 0 10px;
    font-size: 1.4em;
    color: #007bff;
}

.card p {
    margin: 5px 0;
    font-size: 0.95em;
    color: #555;
}

/* Status Styling */
.status {
    font-weight: bold;
    padding: 5px 10px;
    border-radius: 5px;
    font-size: 0.9em;
}

.status.active {
    background-color: #28a745;
    color: white;
}

.status.inactive {
    background-color: #dc3545;
    color: white;
}

</style>

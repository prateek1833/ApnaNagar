<% layout('../layout/boilerplate') -%>

  <div class="container">
    <h1 class="text-center">Restaurant Statistics</h1>
    
    <!-- Overview -->
    <div class="row mt-4 offset-0">
      <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
          <div class="card-header">Total Earnings</div>
          <div class="card-body">
            <h5 class="card-title">₹<%= totalEarnings %></h5>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
          <div class="card-header">Total Profit</div>
          <div class="card-body">
            <h5 class="card-title">₹<%= totalProfit %></h5>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
          <div class="card-header">Total Orders</div>
          <div class="card-body">
            <h5 class="card-title"><%= totalOrders %></h5>
          </div>
        </div>
      </div>
    </div>

    <!-- Monthly Earnings -->
    <div class="mt-5">
      <h3>Monthly Earnings</h3>
      <canvas id="monthlyEarningsChart"></canvas>
    </div>

    <!-- Daily Orders -->
    <div class="mt-5">
      <h3>Daily Orders</h3>
      <canvas id="dailyOrdersChart"></canvas>
    </div>

    <!-- Top Selling Items -->
    <div class="mt-5">
      <h3>Top Selling Items</h3>
      <ul class="list-group">
        <% topSellingItems.forEach(item => { %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= item.name %>
            <span class="badge bg-primary rounded-pill"><%= item.quantitySold %> sold</span>
          </li>
        <% }); %>
      </ul>
    </div>

    <!-- Category Sales -->
    <div class="mt-5">
      <h3>Category Sales</h3>
      <canvas id="categorySalesChart"></canvas>
    </div>
  </div>

  <script>
    // Monthly Earnings Chart
    const monthlyEarningsCtx = document.getElementById('monthlyEarningsChart').getContext('2d');
    new Chart(monthlyEarningsCtx, {
      type: 'bar',
      data: {
        labels: ['January', 'February', 'March'], // Example labels
        datasets: [{
          label: 'Earnings (₹)',
          data: [1000, 2000, 3000], // Example data
          backgroundColor: 'rgba(75, 192, 192, 0.5)',
          borderColor: 'rgba(75, 192, 192, 1)',
          borderWidth: 1
        }]
      }
    });

    // Daily Orders Chart
    const dailyOrdersCtx = document.getElementById('dailyOrdersChart').getContext('2d');
    new Chart(dailyOrdersCtx, {
      type: 'line',
      data: {
        labels: <%- JSON.stringify(orderDates) %>, // Use raw JSON injection
        datasets: [{
          label: 'Orders',
          data: <%- JSON.stringify(orderCounts) %>, // Use raw JSON injection
          borderColor: 'rgba(153, 102, 255, 1)',
          fill: false
        }]
      }
    });

    // Category Sales Chart
    const categorySalesCtx = document.getElementById('categorySalesChart').getContext('2d');
    new Chart(categorySalesCtx, {
      type: 'pie',
      data: {
        labels: <%- JSON.stringify(categoryLabels) %>,
        datasets: [{
          label: 'Sales',
          data: <%- JSON.stringify(categoryData) %>,
          backgroundColor: [
            'rgba(255, 99, 132, 0.5)',
            'rgba(54, 162, 235, 0.5)',
            'rgba(255, 206, 86, 0.5)',
            'rgba(75, 192, 192, 0.5)',
            'rgba(153, 102, 255, 0.5)',
            'rgba(255, 159, 64, 0.5)'
          ],
          borderWidth: 1
        }]
      }
    });
  </script>


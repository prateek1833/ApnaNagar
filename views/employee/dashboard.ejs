<% layout('../layout/boilerplate') -%>

    <span class="d-flex align-items-center justify-content-around">
        <form action="/employee/<%= currUser.id %>/toggle" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger">
                <%- employee.isAvailable ? '<i class="fa-solid fa-lock "></i>' : '<i class="fa-solid fa-bicycle"></i>' %>
            </button>
        </form>
    </span>

    <div class="container mt-4">
        <h2 class="text-center text-primary mb-4">Delivery Dashboard</h2>
    
        <!-- Total Deliveries -->
        <p class="lead"><strong>Total Deliveries:</strong> <%= employee.total_deliveries %></p>
    
        <!-- Active Order Section -->
        <% if (employee.active_order) { %>
            <div class="card mb-3 shadow-lg">
                <div class="card-header bg-primary text-white rounded-top">
                    <h5 class="m-0">Active Order</h5>
                </div>
                <div class="card-body">
                    <p><strong>Order ID:</strong> <%= employee.active_order._id %></p>
                    <p><strong>Customer Name:</strong> <%= employee.active_order.author.name %></p>
                    <p><strong>Customer Mobile:</strong> <%= employee.active_order.author.mobile %></p>
                    <p><strong>Items:</strong></p>
                    <ul>
                        <% employee.active_order.items.forEach(item => { %>
                            <li><%= item.item.title %> - <%= item.quantity %> <%= item.item.unit %></li>
                        <% }) %>
                    </ul>
                    <p><strong>Status:</strong> <span class="badge bg-warning text-dark"><%= employee.active_order.status %></span></p>
    
                    <!-- Mark Order as Completed -->
                    <form action="/order/<%= employee.active_order._id %>/complete" method="POST" class="mt-3">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fa-solid fa-check"></i> Complete Order
                        </button>
                    </form>
                </div>
            </div>
        <% } else { %>
            <div class="alert alert-info">
                <i class="fa-solid fa-clock"></i> No active orders. Waiting for assignment.
            </div>
        <% } %>
    
        <!-- Pending Orders -->
        <h4 class="mt-4 text-secondary">Pending Orders</h4>
        <div class="list-group">
            <% if (pendingOrders.length > 0) { %>
                <% pendingOrders.forEach(order => { %>
                    <div class="list-group-item d-flex justify-content-between align-items-center shadow-sm mb-2 rounded">
                        <div>
                            <p><strong>Order ID:</strong> <%= order._id %></p>
                            <p><strong>Customer Name:</strong> <%= order.author.name %></p>
                            <p><strong>Items:</strong></p>
                            <ul>
                                <% order.items.forEach(item => { %>
                                    <li><%= item.item.title %> - <%= item.quantity %> <%= item.item.unit %></li>
                                <% }) %>
                            </ul>
                        </div>
                        <span class="badge bg-secondary text-white py-2 px-3">Pending</span>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-muted">No pending orders.</p>
            <% } %>
        </div>
    </div>
    
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }
    
        .card-header {
            border-bottom: 2px solid #fff;
        }
    
        .list-group-item {
            transition: transform 0.3s ease;
        }
    
        .list-group-item:hover {
            transform: scale(1.02);
            box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
        }
    
        .btn:hover {
            opacity: 0.8;
        }
    </style>
    
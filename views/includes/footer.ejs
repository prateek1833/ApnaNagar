<footer id="footer">
    <div style="height: 100px;"></div>
    <% if(currUser && currUser.type && (currUser.type==="User")) { %>
    <nav class="navbar navbar-expand-lg fixed-bottom navbar-custom">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <a class="filter nav-link" href="/items" aria-label="Home">
                <i class="fa-solid fa-house"></i>
                <p style="font-size: smaller;">Home</p>
            </a>
            <a class="filter nav-link" href="/items/<%= currUser._id %>/myOrders" aria-label="My Orders">
                <i class="fa-solid fa-bag-shopping"></i>
                <p style="font-size: smaller;">Orders</p>
            </a>
            <a class="filter nav-link" href="/<%= currUser._id %>/cart" aria-label="My Cart">
                <i class="fa-solid fa-cart-shopping"></i>
                <p style="font-size: smaller;">Cart</p>
            </a>
            <a class="filter nav-link" href="/restaurant/index" aria-label="Restaurant">
                <i class="fa-solid fa-utensils"></i>
                <p style="font-size: smaller;">Restaurants</p>
            </a>
        </div>
    </nav>
    <% } %>
</footer>

<style>
    #footer {
        position: fixed;
        bottom: 0;
        width: 100%;
        z-index: 10;
        transition: transform 0.4s ease-in-out, opacity 0.4s ease-in-out;
    }
    .hide-footer {
        transform: translateY(100%);
        opacity: 0;
    }
</style>

<script>
    let lastScrollTop = 0;
    const footer = document.getElementById('footer');

    window.addEventListener("scroll", function() {
        let scrollTop = window.pageYOffset || document.documentElement.scrollTop;
        if (scrollTop > lastScrollTop) {
            // User is scrolling down, hide footer smoothly
            footer.classList.add("hide-footer");
        } else {
            // User is scrolling up, show footer smoothly
            footer.classList.remove("hide-footer");
        }
        lastScrollTop = scrollTop;
    });
</script>

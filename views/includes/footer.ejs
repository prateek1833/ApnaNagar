<style>
    .navbar-custom {
        height: 70px;
        background-color: white;
        border-top: 1px solid #ddd;
    }

    #filters {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        overflow-x: auto;
        padding-left: 10px;
    }

    .filter {
        text-align: center;
        margin-right: 0.5rem;
        padding: 5px 15px;
        border: 2px solid #ff4e50;
        border-radius: 25px;
        background-color: white;
        color: #ff4e50;
        font-size: 0.8rem;
        transition: all 0.3s ease;
        text-decoration: none;
        flex: 0 0 auto;
        white-space: nowrap;
    }

    .filter:hover {
        background-color: #ff4e50;
        color: white;
    }

    .filter i {
        font-size: 1.6rem;
        display: block;
    }

    .navbar-custom p {
        margin: 0;
        font-size: 0.8rem;
    }
</style>

<footer>
    <div style="height: 100px;">
    </div>
    <% if(currUser && !currUser.owner._id.equals(currUser._id)) { %>
    <nav class="navbar navbar-expand-lg fixed-bottom navbar-custom">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <a class="filter nav-link" href="/items" aria-label="Home">
                <i class="fa-solid fa-house"></i>
                <p>Home</p>
            </a>
            <a class="filter nav-link" href="/items/<%= currUser._id %>/myOrders" aria-label="My Orders">
                <i class="fa-solid fa-bag-shopping"></i>
                <p>My Orders</p>
            </a>
            <a class="filter nav-link" href="/<%= currUser._id %>/cart" aria-label="My Cart">
                <i class="fa-solid fa-cart-shopping"></i>
                <p>My Cart</p>
            </a>
            <a class="filter nav-link" href="/owner/addItem" aria-label="Add Item">
                <i class="fa-solid fa-plus"></i>
                <p>Add Item</p>
            </a>
        </div>
    </nav>
    <% } %>
</footer>

<style>
    .navbar-custom {
        height: 70px;
        background-color: white;
        border-top: 1px solid #ddd;
    }

    #filters {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        overflow-x: auto;
        /* padding-left: 10px; */
    }

    .filter {
        text-align: center;
        margin-right: 0.3rem;
        padding: 0px 10px;
        /* border: 2px solid #ff4e50; */
        border-radius: 25px;
        background-color: white;
        color: #ff4e50;
        font-size: 0.8rem;
        transition: all 0.3s ease;
        text-decoration: none;
        flex: 0 0 auto;
        white-space: nowrap;
    }

    .filter i {
        font-size: 1.6rem;
        display: block;
    }

    .navbar-custom p {
        margin: 0;
        font-size: 0.8rem;
    }
</style>

<footer>

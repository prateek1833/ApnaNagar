        <div class="container-fluid d-flex justify-content-between align-items-center">
            <a class="filter nav-link" href="/restaurant/<%= currUser.id %>/show" aria-label="Home">
                <i class="fa-solid fa-house"></i>
                <p>Home</p>
            </a>
            <a class="filter nav-link" href="/restaurant/<%= currUser.id %>/show" aria-label="My Orders">
                <i class="fa-solid fa-bag-shopping"></i>
                <p>My Orders</p>
            </a>
            <a class="filter nav-link" href="restaurant/<%= currUser._id %>/Statistc" aria-label="My Cart">
                <i class="fa-solid fa-cart-shopping"></i>
                <p>Statistc</p>
            </a>

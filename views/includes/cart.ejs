<!-- Cart Section (Just above the Footer) -->
<% if(cartItems.length>0) {%>
    <div id="cart-container" class="cart-fixed  d-flex flex-row justify-content-between">
        <p id="cart-items"></p> <!-- Only list updates dynamically -->
        <a href="/<%= currUser ? currUser._id : '' %>/cart">View full cart</a>
        <a href="/order/<%= currUser ? currUser._id : '' %>/location" class="btn btn-primary light-btn">Proceed â†’</a>
    </div>
    <% } %>


<style>
    .cart-container {
        border-radius: 50px;
    }

    .cart-fixed {
        position: fixed;
        bottom: 70px;
        width: 100vw;
        background-color: rgba(255, 255, 255);
        padding: 15px;
        border-radius: 50px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        z-index: 1000;
        height: 68px;
        /* Prevents height changes when cart updates */
    }
    #cart-items p{
        margin: 0 !important;
        font-weight: bolder;
        color: #6A0DAD;
    }
    .hide-element {
        transform: translateY(100%);
        opacity: 0;
        transition: transform 0.4s ease-in-out, opacity 0.4s ease-in-out;
    }
</style>
<script>
    let lastScrollTop = 0;
    const cartContainer = document.getElementById('cart-container');

    window.addEventListener("scroll", function() {
        let scrollTop = window.pageYOffset || document.documentElement.scrollTop;

        if (scrollTop > lastScrollTop) {
            // Scrolling down - Hide footer and cart
            footer.classList.add("hide-element");
            if (cartContainer) {
                cartContainer.classList.add("hide-element");
            }
        } else {
            // Scrolling up - Show footer and cart
            footer.classList.remove("hide-element");
            if (cartContainer) {
                cartContainer.classList.remove("hide-element");
            }
        }
        lastScrollTop = scrollTop;
    });
</script>